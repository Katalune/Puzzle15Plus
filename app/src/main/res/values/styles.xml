<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="scoreItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material</item>
    </style>

    <style name="screenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:background">#0AA68C</item>
        <item name="android:textColor">#FCFBF7</item>
    </style>

</resources>
